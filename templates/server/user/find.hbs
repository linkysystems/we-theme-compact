<div class="users text-center">
  {{#we-grid items=data cols=4}}
    <div class="thumbnail">
      {{#link-to 'user.findOne' id}}
        {{#if avatar}}
          {{we-image avatar 'medium' width="100%"}}
        {{else}}
          <img src="/avatar/{{id}}" width="100%">
        {{/if}}
      {{/link-to}}
      <div class="caption">
        {{#link-to 'user.findOne' id}}
          <h4 class="user-teaser-title">
            {{we-strip-tags text=displayName maxLength=40}}
          </h4>
        {{/link-to}}

        {{#if meta.membersCount}}
          <div class="group-teaser-members-counter">{{meta.membersCount}} membros</div>
        {{/if}}
      </div>
    </div>
  {{/we-grid}}
</div>